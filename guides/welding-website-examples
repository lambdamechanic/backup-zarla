<source
data-srcset="https://www.zarla.com/images/zarla-cast-iron-welding-3840x5694-20240625.webp?crop=400:248,offset-x0,offset-y0&width=495&dpr=2" media="(max-width: 575px)" />
<img
class="lazyload"
data-src="https://www.zarla.com/images/zarla-cast-iron-welding-3840x5694-20240625.webp?crop=400:248,offset-x0,offset-y0&width=650&dpr=2"
