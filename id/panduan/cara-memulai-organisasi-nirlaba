d="M503.212,83.792c-5.859-5.859-15.352-5.859-21.211,0l-21.211,21.211c-5.859,5.859-5.859,15.352,0,21.211    c5.859,5.859,15.351,5.859,21.211,0l21.211-21.211C509.071,99.144,509.071,89.651,503.212,83.792z" data-original="#000000" class="active-path" data-old_color="#000000" fill="#4949E7"/>
</g>
